@{
}
@section page{
    <script src="~/js/user.js"></script>
    <script src="~/js/galaxies.pipeline.js"></script>
}
@{
    ViewData["Title"] = "User/Index";
}
@model IdentityServer4_Manager.Model.ViewModel.UserCondition

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Condition</h3>
        <div class="box-tools pull-right">
            <button id="add" class="btn btn-primary" style="font-size:12px;">
                <i class="glyphicon glyphicon-plus"></i>&nbsp; Add
            </button>
            <button id="query" type="button" class="btn btn-primary btn-condition" data-loading-text="<i class='fa fa-spinner fa-spin '></i>&nbsp; Search" style="font-size:12px;">
                <i class="glyphicon glyphicon-search"></i>&nbsp; Search
            </button>
            <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->
    <div class="row box-body">
        <div class="col-xs-4">
            <div class="input-group">
                <span class="input-group-addon">ID</span>
                <input type="text" class="form-control" asp-for="UserId" placeholder="User Id">
            </div>
        </div>
        <div class="col-xs-4">
            <div class="input-group">
                <span class="input-group-addon">User Name</span>
                <input type="text" class="form-control" asp-for="UserName" placeholder="User Name">
            </div>
        </div>
    </div>
</div>

<div class="box" id="boxer">
    <div class="box-body">
        <table id="tb_user" class="table table-striped"></table>
    </div>
</div>


<!-- 模态框（Modal） -->
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modalTitle"></h4>
            </div>
            <div id="contentBody" class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button id="saveChange" type="button" class="btn btn-primary">提交更改</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
