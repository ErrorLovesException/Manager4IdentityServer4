@{
}
@model IList<IdentityServer4_Manager.Model.Claim>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="modalTitle">
        Role Claims
    </h4>
</div>
<div id="modal-body" class="modal-body">
    <table id="userClaims" class="table table-bordered">
        <thead><button type="button" class="btn btn-default btn-block">Create Claim</button></thead>
        <tr>
            <th>Operation</th>
            <th>ClaimType</th>
            <th>ClaimValue</th>
        </tr>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <button onclick="createRoleClaim('@item.Id','@item.ClaimType','@item.ClaimValue')"><i class="fa fa-trash"></i></button>
                        <button onclick="removeRoleClaim('@item.Id','@item.ClaimType','@item.ClaimValue')"><i class="fa fa-trash"></i></button>
                    </td>
                    <td>@item.ClaimType</td>
                    <td>@item.ClaimValue</td>
                </tr>
            }
        }
    </table>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="saveChange" type="button" class="btn btn-primary">OK</button>
</div>