@{
}
@section page{
    <script src="~/js/apiResource.js"></script>
}
@{
    ViewData["Title"] = "ApiResource/Index";
}

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Condition</h3>
        <div class="box-tools pull-right">
            <button id="add" class="btn btn-primary" style="font-size:12px;">
                <i class="glyphicon glyphicon-plus"></i>&nbsp; Add
            </button>
            <button id="query" type="button" class="btn btn-primary btn-condition" data-loading-text="<i class='fa fa-spinner fa-spin '></i>&nbsp; Search" style="font-size:12px;">
                <i class="glyphicon glyphicon-search"></i>&nbsp; Search
            </button>
            <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->
    <div class="row box-body">
        <div class="col-xs-4">
            <div class="input-group">
                <span class="input-group-addon">ID</span>
                <input type="text" id="identityId" class="form-control" placeholder="Client Id">
            </div>
        </div>
        <div class="col-xs-4">
            <div class="input-group">
                <span class="input-group-addon">User Name</span>
                <input type="text" id="identityName" class="form-control" placeholder="Client Name">
            </div>
        </div>
    </div>
</div>

<div class="box" id="boxer">
    <div class="box-body">
        <table id="tb" class="table table-striped"></table>
    </div>
</div>


<!-- 模态框（Modal） -->
<div class="modal fade" id="identityResourceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div id="contentBody" class="modal-content">
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>

<div class="modal fade" id="editorModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="background-color:#fff;">
        <div id="editor-body" class="modal-body" style="padding:0px;">
            <div id="jsoneditor"></div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button id="btn_change_identityResource" type="button" class="btn btn-primary btn-loading"
                    data-loading-text="<i class='fa fa-spinner fa-spin '></i>&nbsp; Sending...">
                Change
            </button>
        </div>
    </div><!-- /.modal -->
</div>