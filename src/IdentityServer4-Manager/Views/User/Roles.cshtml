@{
}

@model IList<string>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="modalTitle">
        User Roles
    </h4>
</div>
<div id="modal-body" class="modal-body">
    <input id="txt_userId" type="hidden" value="@ViewBag.UserId" />
    <table id="userRole" class="table table-bordered">
        <thead>
            <button type="button" onclick="addNewLineForRole()" class="btn btn-default btn-block">Add To Role</button>
        </thead>
        <tr>
            <th>Operation</th>
            <th>Role Name</th>
        </tr>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <button onclick="deleteUserRole('@ViewBag.UserId','@item')"><i class="fa fa-trash"></i></button>
                    </td>
                    <td>@item</td>
                </tr>
            }
        }
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>